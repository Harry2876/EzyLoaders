<!-- res/values/attrs.xml -->
<resources>
    <declare-styleable name="CircularLoaderView">
        <attr name="loaderColor" format="color" />
        <attr name="loaderSize" format="dimension" />
        <attr name="loaderSpeed" format="integer" />
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>

        <declare-styleable name="LineSpinnerView">
            <attr name="lsSize" format="dimension" />
            <attr name="lsColor" format="color" />
            <attr name="lsStroke" format="dimension" />
        </declare-styleable>

    <declare-styleable name="TailChaseSpinner">
        <attr name="tsSize" format="dimension"/>
        <attr name="tsDotColor" format="color"/>
        <attr name="tsDotSizePercentage" format="float"/>
    </declare-styleable>

</resources>